# Environment variables for Riser backend
# Copy this file to .env and fill in your API keys

# OpenWeatherMap API
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# PAGASA API (if available)
PAGASA_API_KEY=your_pagasa_api_key_here
PAGASA_API_BASE=https://api.pagasa.dost.gov.ph

# DOST Project NOAH API
NOAH_API_KEY=your_noah_api_key_here
NOAH_API_BASE=https://noah.up.edu.ph/api

# NOAA API
NOAA_API_KEY=your_noaa_api_key_here
NOAA_API_BASE=https://api.weather.gov

# Email notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/riser
