# Environment variables for Riser backend
# Copy this file to .env and fill in your API keys

# Weather APIs
OPENWEATHER_API_KEY=your_openweathermap_api_key_here

# Real Traffic APIs
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
TOMTOM_API_KEY=your_tomtom_api_key_here

# Real Transport APIs
GTFS_API_KEY=your_gtfs_realtime_api_key_here
MRT_API_KEY=your_mrt_api_key_here
LRT_API_KEY=your_lrt_api_key_here

# Government Data Sources (Note: Most require special access)
PAGASA_API_KEY=request_from_pagasa_dost_gov_ph
PAGASA_API_BASE=https://api.pagasa.dost.gov.ph
NOAH_API_KEY=request_from_noah_up_edu_ph
NOAH_API_BASE=https://noah.up.edu.ph/api
NOAA_API_KEY=your_noaa_api_key_here
NOAA_API_BASE=https://api.weather.gov

# Legacy API configurations (for backward compatibility)
TRAFFIC_API_KEY=your_traffic_api_key_here
TRAFFIC_API_BASE=https://api.tomtom.com/traffic/services/4
TRANSPORT_API_KEY=your_transport_api_key_here
TRANSPORT_API_BASE=https://api.ltfrb.gov.ph

# Email notifications (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# SMS notifications (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/riser

# Server Configuration
PORT=4000

# API Documentation
# Get OpenWeatherMap API: https://openweathermap.org/api
# Get Google Maps API: https://developers.google.com/maps/documentation/directions/overview
# Get TomTom API: https://developer.tomtom.com/traffic-api/documentation
# PAGASA Data: Contact PAGASA at information@pagasa.dost.gov.ph
# NOAH Data: Contact UP NOAH at resilience.institute@up.edu.ph
# NOAA Data: https://www.weather.gov/documentation/services-web-api
